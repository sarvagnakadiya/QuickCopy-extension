{
  "manifest_version": 3,
  "name": "QuickCopy",
  "version": "1.0",
  "permissions": ["storage", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "1.png",
      "48": "1.png",
      "128": "1.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
